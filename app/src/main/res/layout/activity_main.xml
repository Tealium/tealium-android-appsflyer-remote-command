<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="24dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tealium AppsFlyer Remote Commmand!"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/set_host_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_host"/>

    <Button
        android:id="@+id/set_user_emails_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_user_emails" />

    <Button
        android:id="@+id/set_customer_id_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_customer_id" />

    <Button
        android:id="@+id/set_currency_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_currency_code" />

    <Button
        android:id="@+id/track_purchase_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_purchase"/>

    <Button
        android:id="@+id/track_level_achieved_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/achieve_level" />

    <Button
        android:id="@+id/track_location_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/track_location" />

</LinearLayout>